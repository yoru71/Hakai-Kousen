{% extends "base.html.twig" %}

{% block title %} Message {% endblock %}

{% block body %}
<div class="row">

    <h1 class="col-8 offset-2 mt-5 text-center"> Message de vue </h1>

</div>

<div class="row">
    <div class="col-12 bg-danger">
        {% for message in subject.messages %}
        <p class="bg-danger text-light">{{ message.subject.title }}
            <br>
            {{ message.content }}
            <br>
            <p class="text-light text-right">
                Par {{ message.author.pseudonyme }}
                <br>
                Le {{ message.publicationDate|date("m/d/Y") }}
            </p>
        </p>
        {% endfor %}
    </div>
</div>
{% endblock %}