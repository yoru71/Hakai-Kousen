{% extends "base.html.twig" %}

{% block title %} Message {% endblock %}

{% block body %}
<div class="row">

    <h1 class="h2 col-8 offset-2 mt-5 text-center"> Message de vue </h1>

</div>

<div class="row">
    {% for message in subject.messages %}
    <div class="col-5 offset-3 text-center my-8">
        <p class="bg-danger text-light text-left p-3">{{ message.subject.title }}
            <br>
            {{ message.content }}
        </p>
    </div>
        <br>
    <div>
        <p class="text-danger text-right text-center my-8">
            Par {{ message.author.pseudonyme }}
            <br>
            Le {{ message.publicationDate|date("m/d/Y") }}
        </p>
    </div>

    {% endfor %}
    {% if app.user %}
        <div  class="col-12 text-center">
            {{ form(form) }}    
        </div>
    {% endif %}
</div>
{% endblock %}